<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CheapSharkMobile.EmailNotificationsModal">E
	<ContentPage.Padding>
	        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" WinPhone="20,20,20,20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Sign Up For Price Notifications"/>
			<Label Text="To get price alerts via email for Valkyria Chronicles fill out the information below." />
			<Label Text="Email" />
			<Entry Placeholder="example@example.com" />
			<Label Text="Target Price" />
			<Entry Placeholder="9.99" />
			<Label Text="When the price at any store reaches (or goes under) your target, we'll let you know!" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
